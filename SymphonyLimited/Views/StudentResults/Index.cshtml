@model IEnumerable<SymphonyLimited.Entity.StudentResult>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RollNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassAssigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeesAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RollNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassAssigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeesAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentResultId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentResultId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentResultId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
